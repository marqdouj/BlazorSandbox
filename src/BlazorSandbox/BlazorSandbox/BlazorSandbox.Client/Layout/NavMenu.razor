@rendermode InteractiveAuto

<div class="navmenu">
    <input type="checkbox" title="Menu expand/collapse toggle" id="navmenu-toggle" class="navmenu-icon" />
    <label for="navmenu-toggle" class="navmenu-icon"><FluentIcon Value="@(new Icons.Regular.Size20.Navigation())" Color="Color.Fill" /></label>
    <nav class="sitenav" aria-labelledby="main-menu">
        <FluentNavMenu Id="main-menu" Width="250" Collapsible="true" Title="Navigation menu" @bind-Expanded="expanded" CustomToggle="true">
            <FluentNavLink Href="/" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.Home())" IconColor="Color.Accent">Home</FluentNavLink>
        
            <FluentNavGroup Title="NuGet Packages" Expanded="true" Icon="@(new Icons.Regular.Size20.DesignIdeas())" IconColor="Color.Accent">
                <FluentNavGroup Title="C# Common" Icon="@(new Icons.Regular.Size20.DesignIdeas())" IconColor="Color.Accent">
                    <FluentNavLink Href="https://github.com/marqdouj/CLRCommon" Target="_blank" Icon="@(new Icons.Regular.Size20.Link())" IconColor="Color.Accent">Project Website</FluentNavLink>
                    <FluentNavLink Href="clr-exceptions" Icon="@(new Icons.Regular.Size20.CommentError())" IconColor="Color.Accent">Exceptions</FluentNavLink>
                    <FluentNavLink Href="clr-strings" Icon="@(new Icons.Regular.Size20.TextNumberFormat())" IconColor="Color.Accent">Strings</FluentNavLink>
                </FluentNavGroup>

                <FluentNavGroup Title="Html Common" Icon="@(new Icons.Regular.Size20.DesignIdeas())" IconColor="Color.Accent">
                    <FluentNavLink Href="https://github.com/marqdouj/HtmlCommon" Target="_blank" Icon="@(new Icons.Regular.Size20.Link())" IconColor="Color.Accent">Project Website</FluentNavLink>
                    <FluentNavLink Href="html-com-css-id" Icon="@(new Icons.Regular.Size20.DocumentCss())" IconColor="Color.Accent">Css Id</FluentNavLink>
                </FluentNavGroup>

                <FluentNavGroup Title="Html Components" Icon="@(new Icons.Regular.Size20.DesignIdeas())" IconColor="Color.Accent">
                    <FluentNavLink Href="https://github.com/marqdouj/HtmlComponents" Target="_blank" Icon="@(new Icons.Regular.Size20.Link())" IconColor="Color.Accent">Project Website</FluentNavLink>
                    <FluentNavLink Href="avatar" Icon="@(new Icons.Regular.Size20.ImageCircle())" IconColor="Color.Accent">Avatar</FluentNavLink>
                    <FluentNavLink Href="resize" Icon="@(new Icons.Regular.Size20.Resize())" IconColor="Color.Accent">Resize Observer</FluentNavLink>
                    <FluentNavLink Href="slides" Icon="@(new Icons.Regular.Size20.SlideArrowRight())" IconColor="Color.Accent">Slide Show</FluentNavLink>
                </FluentNavGroup>

                <FluentNavGroup Title="Html Components - FluentUI" Icon="@(new Icons.Regular.Size20.DesignIdeas())" IconColor="Color.Accent">
                    <FluentNavLink Href="https://github.com/marqdouj/HtmlComponents.FluentUI" Target="_blank" Icon="@(new Icons.Regular.Size20.Link())" IconColor="Color.Accent">Project Website</FluentNavLink>
                    <FluentNavLink Href="colors" Icon="@(new Icons.Regular.Size20.Color())" IconColor="Color.Accent">Color Picker</FluentNavLink>
                    <FluentNavLink Href="themes" Icon="@(new Icons.Regular.Size20.DarkTheme())" IconColor="Color.Accent">Theme Controls</FluentNavLink>
                </FluentNavGroup>

                <FluentNavGroup Title="Html Geolocation" Icon="@(new Icons.Regular.Size20.DesignIdeas())" IconColor="Color.Accent">
                    <FluentNavLink Href="https://github.com/marqdouj/Geolocation" Target="_blank" Icon="@(new Icons.Regular.Size20.Link())" IconColor="Color.Accent">Project Website</FluentNavLink>
                    <FluentNavLink Href="geolocation" Icon="@(new Icons.Regular.Size20.Globe())" IconColor="Color.Accent">Geolocation</FluentNavLink>
                </FluentNavGroup>
            </FluentNavGroup>

        </FluentNavMenu>
    </nav>
</div>

@code {
    private bool expanded = true;

}
